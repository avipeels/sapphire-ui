{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@sapphireui/design-tokens": ["packages/sappire-design-tokens/src/index.ts"],
      "@sapphireui/design-tokens/*": ["packages/sappire-design-tokens/src/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["global.d.ts", "packages/*/src/**/*"],
  "references": [
    { "path": "./packages/sappire-design-tokens" },
    { "path": "./packages/toggle" }
  ]
}
